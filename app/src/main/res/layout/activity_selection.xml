                android:layout_gravity="center|top"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_row="8"
                android:text="GYM"
                android:textColor="#000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnGYM"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_column="0"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_row="7"
                android:background="@drawable/ic_gym"
                android:onClick="onClick"
                android:text="" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center|top"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_row="8"
                android:text="Müze"
                android:textColor="#000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnMuseum"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_column="1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_row="7"
                android:background="@drawable/ic_museum"
                android:onClick="onClick"
                android:text="" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_row="8"
                android:text="Favorilerim"
                android:textColor="#000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnListele"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_column="2"
                android:layout_marginLeft="20dp"
                android:layout_row="7"
                android:onClick="onClick"
                android:background="@drawable/ic_list" />
        </GridLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewasdsad22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Diğer Yerler"
            android:textColor="#000000"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnGo"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:onClick="onClick"
                android:text="Git" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>
