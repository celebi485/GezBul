<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bektasoguzhan.gezbul.SelectionActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <Button
            android:id="@+id/btnNone"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_row="0"
            android:gravity="center"
            android:onClick="onClick"
            android:text="BOÅž" />

        <TextView
            android:id="@+id/textView42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center|top"
            android:layout_row="1"
            android:text="Serbest"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnCafe"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_row="0"
            android:background="@drawable/ic_cafe"
            android:gravity="center"
            android:onClick="onClick" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center|top"
            android:layout_marginLeft="20dp"
            android:layout_row="1"
            android:text="Cafe"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnHospital"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="2"
            android:layout_gravity="center|left"
            android:layout_row="0"
            android:background="@drawable/ic_hospital"
            android:onClick="onClick" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="center|left"
            android:layout_row="1"
            android:text="Hospital"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnShopping"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_row="2"
            android:background="@drawable/ic_shopping"
            android:gravity="center"
            android:onClick="onClick" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center|top"
            android:layout_row="3"
            android:text="AVM"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnSchool"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_row="2"
            android:background="@drawable/ic_school"
            android:gravity="center"
            android:onClick="onClick" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center|top"
            android:layout_marginLeft="20dp"
            android:layout_row="3"
            android:text="School"
            android:textSize="24sp" />

    </GridLayout>
</LinearLayout>
