<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#78909c"
    android:orientation="vertical"
    tools:context="com.bektasoguzhan.gezbul.SelectionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/favorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:text="Sık Kullanılanlar"
            android:textColor="#000000"
            android:textSize="24sp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="0dp"
            android:columnCount="3">

            <Button
                android:id="@+id/btnNone"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_row="0"
                android:onClick="onClick"
                android:text="Harita" />

            <TextView
                android:id="@+id/textView42"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center|top"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_row="1"
                android:text="Harita"
                android:textColor="#000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnCafe"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_row="0"
                android:background="@drawable/ic_cafe"
                android:onClick="onClick" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center|top"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_row="1"
                android:text="Cafe"
                android:textColor="#000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnHospital"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_column="2"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_row="0"
                android:background="@drawable/ic_hospital"
                android:onClick="onClick" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="left"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_row="1"
                android:text="Hastane"
                android:textColor="#000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnShopping"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_column="0"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_row="2"
                android:background="@drawable/ic_shopping"
                android:onClick="onClick" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center|top"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_row="3"
                android:text="AVM"
                android:textColor="#000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnSchool"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_row="2"
                android:background="@drawable/ic_school"
                android:onClick="onClick" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center|top"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_row="3"
                android:text="Okul"
                android:textColor="#000000"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_row="3"
                android:text="Banka"
                android:textColor="#000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnBank"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_column="2"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_row="2"
                android:background="@drawable/ic_bank"
                android:onClick="onClick"
                android:text="" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center|top"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_row="6"
                android:text="Bar"
                android:textColor="#000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnBar"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_column="0"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_row="5"
                android:background="@drawable/ic_bar"
                android:onClick="onClick"
                android:text="" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center|top"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_row="6"
                android:text="Benzinlik"
                android:textColor="#000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnGasStation"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
